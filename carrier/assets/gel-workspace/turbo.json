{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "build:staging": {
      "dependsOn": ["^build:staging"],
      "outputs": ["dist/**", "build/**"],
      "env": [
        "NODE_ENV",
        "DEPLOY_TARGET",
        "DEPLOY_ENV",
        "BUILD_ENV",
        "VITE_APP_ENV",
        "VITE_NODE_ENV",
        "VITE_BUILD_ENV",
        "VITE_MODE"
      ]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "tsc": {
      "dependsOn": ["^build", "^tsc"],
      "outputs": []
    },
    "check:circular": {
      "outputs": [],
      "cache": false
    },
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    }
  }
}
