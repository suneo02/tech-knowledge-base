{
  "name": "gel-types",
  "version": "0.1.0",
  "description": "共享类型定义包，用于整个 monorepo",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "node ../../scripts/clean.cjs dist",
    "build": "npm run clean && vite build",
    "build:dev": "vite build --mode development",
    "build:staging": "npm run clean && vite build --mode staging",
    "dev": "vite build --watch",
    "tsc": "tsc --noEmit",
    "gen:schema": "tsx scripts/generate-json-schema.ts",
    "check:circular": "madge --circular --extensions ts,tsx src/"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "ts-json-schema-generator": "^2.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0"
  }
}
